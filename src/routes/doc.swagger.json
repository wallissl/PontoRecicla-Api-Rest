      "post": {
        "tags": [
          "Usuários"
        ],
        "description": "Endpoint para criar um novo usuário",
        "parameters": [
          {
            "name": "criarUsuario",
            "in": "body",
            "description": "Dados do usuário a ser criado",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "nome": {
                  "type": "string",
                  "example": "Nome do Usuário"
                },
                "email": {
                  "type": "string",
                  "example": "seuEmail@gmail.com"
                },
                "senha": {
                  "type": "string",
                  "example": "senha123"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
