            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "nome_do_local": {
                  "type": "string",
                  "example": "Eco Ponto"
                },
                "descricao": {
                  "type": "string",
                  "example": "Local para coleta de materiais recicláveis"
                },
                "estado": {
                  "type": "string",
                  "example": "São Paulo"
                },
                "cidade": {
                  "type": "string",
                  "example": "São Paulo"
                },
                "cep": {
                  "type": "string",
                  "example": "12345-678"
                },
                "bairro": {
                  "type": "string",
                  "example": "Centro"
                },
                "rua": {
                  "type": "string",
                  "example": "Rua das Flores"
                },
                "numero": {
                  "type": "string",
                  "example": "123"
                },
                "coordenadas": {
                  "type": "string",
                  "example": "-23.5505,-46.6333"
                },
                "materiais_aceitos": {
                  "type": "string",
                  "example": "papel, plástico, vidro"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
